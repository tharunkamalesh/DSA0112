#include <iostream>
using namespace std;

int main() {
    int num, rev = 0, rem;

    cout << "Enter a number: ";
    cin >> num;

    while (num != 0) {
        rem = num % 10;          // get last digit
        rev = rev * 10 + rem;   // build reverse
        num = num / 10;         // remove last digit
    }

    cout << "Reversed number: " << rev;

    return 0;
}
